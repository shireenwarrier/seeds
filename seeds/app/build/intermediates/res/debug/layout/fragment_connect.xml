<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConnectActivity"
    >






    <ImageButton
        android:src="@drawable/connectmentor2"

        android:text="Mentoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button2"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/mentoring"
        android:onClick="pressMentorButton"
        android:paddingBottom="36dp"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/mentortext1"
        android:paddingBottom="62dp"
        android:paddingRight="14dp"
        android:layout_alignBottom="@+id/mentoring"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/connectlocator3"
        android:text="Locator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/locator"
        android:onClick="pressLocatorButton"
        android:paddingLeft="20dp"

        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/mentoring"
        android:layout_alignEnd="@+id/mentoring" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:src="@drawable/mapstext2"
        android:paddingBottom="30dp"
        android:paddingRight="12dp"
        android:layout_alignBottom="@+id/locator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/connectcal5"

        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/calendar"
        android:onClick="pressCalendarButton"
        android:paddingTop="36dp"
        android:paddingLeft="20dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/caltext2"
        android:paddingBottom="30dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/calendar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

