<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        >
        <VideoView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/videoView"
            android:layout_weight="1"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoLayout">
        <ImageButton
            android:src="@drawable/newplaybutton"
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:id="@+id/play"
            android:onClick= "pressHomeButton"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageButton
        android:src="@drawable/newconnectbutton"
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button2"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/connect"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="35dp"
        android:onClick= "pressHomeButton"
        android:layout_below="@+id/videoLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/newlearnbutton"
        android:text="Learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/learn"
        android:paddingBottom="15dp"
        android:paddingTop="35dp"
        android:onClick= "pressHomeButton"
        android:layout_below="@+id/videoLayout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVideo"
        android:layout_alignParentTop="true"

        android:layout_above="@+id/connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="pressVideoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout><!-- From: file:/Users/loaner/Desktop/seeds2-5/seeds/app/src/main/res/layout/fragment_home.xml -->