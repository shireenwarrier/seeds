<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/videoLayout"
        android:layout_width="360dp"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:src="@drawable/vidview4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


    <ImageButton
        android:src="@drawable/newconnectbutton"
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button3"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/connect"
        android:onClick= "pressHomeButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/play"
        android:layout_alignEnd="@+id/play"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:src="@drawable/newlearnbutton"
        android:text="Learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button2"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/learn"
        android:onClick= "pressHomeButton"
        android:paddingLeft="20dp"
        android:layout_below="@+id/connect"
        android:layout_toRightOf="@+id/videoLayout"
        android:layout_toEndOf="@+id/videoLayout" />

    <ImageButton
        android:src="@drawable/newplaybutton"
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/play"

        android:onClick= "pressHomeButton"
        android:layout_below="@+id/connect"
        android:layout_toRightOf="@+id/learn"
        android:layout_toEndOf="@+id/learn" />
</RelativeLayout><!-- From: file:/Users/loaner/Desktop/seeds2-5/seeds/app/src/main/res/layout-land/fragment_home.xml -->